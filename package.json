{
  "name": "vscode-sa-check",
  "displayName": "",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sa-check.runCustomCommand",
    "onCommand:sa-check.runByLanguage",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sa-check.run",
        "title": "Sa Check",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "sa-check.run",
        "key": "ctrl+alt+d"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "!inOutput && config.sa-check.showRunCommandInEditorContextMenu",
          "command": "sa-check.run",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "when": "config.sa-check.showRunIconInEditorTitleMenu",
          "command": "sa-check.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Sa Check configuration",
      "properties": {
        "sa-check.customCommand": {
          "type": "string",
          "default": "echo Hello",
          "description": "Set the custom command to run.",
          "scope": "resource"
        },
        "sa-check.showRunIconInEditorTitleMenu": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show 'Sa Check' icon in editor title menu.",
          "scope": "resource"
        },
        "sa-check.showRunCommandInEditorContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show 'Sa Check command in editor context menu.",
          "scope": "resource"
        }
      }
    },
    "languages": [
      {
        "id": "sa-check-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "sa-check-output",
        "scopeName": "sa-check.output",
        "path": "./syntaxes/sa-check-output.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
